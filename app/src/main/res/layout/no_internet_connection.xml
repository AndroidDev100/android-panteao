<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/no_connection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/black_theme_color"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/ic_wifi_off"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sarabun_v7_thai_latin_regular"
            android:text="@string/no_connection"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sarabun_v7_thai_latin_regular"
            android:text="@string/check_connection_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone" />

        <Button
            android:id="@+id/retry_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/selector_my_account_button"
            android:baselineAligned="false"
            android:fontFamily="@font/sarabun_v7_thai_latin_regular"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/retry"
            android:textColor="@drawable/text_color_selecter"
            android:textSize="18dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_network_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_my_account_button"
            android:fontFamily="@font/sarabun_v7_thai_latin_medium"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:textColor="@drawable/text_color_selecter" />

        <!--            android:text="@string/network_settings"-->
    </LinearLayout>

</layout>