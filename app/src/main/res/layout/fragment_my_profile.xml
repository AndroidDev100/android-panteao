<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_theme_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/my_profile"
            android:textColor="#fff"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <!--                <RelativeLayout-->
                <!--                        android:id="@+id/profileLayout"-->
                <!--                        android:layout_width="140dp"-->
                <!--                        android:layout_height="140dp"-->
                <!--                        android:layout_gravity="center"-->
                <!--                        android:gravity="center">-->

                <!--                    <ImageView-->
                <!--                            android:id="@+id/ivProfilePic"-->
                <!--                            android:layout_width="120dp"-->
                <!--                            android:layout_height="120dp"-->
                <!--                            android:contentDescription="@string/content_discription"-->
                <!--                            android:src="@drawable/placeholder_landscape"-->
                <!--                    />-->
                <!--                </RelativeLayout>-->
                <LinearLayout
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circular_drawable"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ivProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sarabun_v7_thai_latin_semibold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:background="#fff" />

                <LinearLayout
                    android:id="@+id/detailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/sarabun_v7_thai_latin_medium"
                        android:maxLength="40"
                        android:singleLine="true"
                        android:text="@string/my_profile"
                        android:textColor="@color/white"
                        android:textColorHint="@color/edit_text"
                        android:textSize="14dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtUserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_envelope"
                        android:drawablePadding="10dp"
                        android:enabled="false"
                        android:fontFamily="@font/sarabun_v7_thai_latin_medium"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:visibility="gone"

                        />

                    <TextView
                        android:id="@+id/txtUserDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/calender_icon"
                        android:drawablePadding="10dp"
                        android:enabled="false"
                        android:fontFamily="@font/sarabun_v7_thai_latin_medium"
                        android:textColor="@color/white"
                        android:textColorHint="@color/edit_text"
                        android:textSize="14dp"
                        android:visibility="gone"

                        />

                    <TextView
                        android:id="@+id/txtUserMobNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/phone_icon"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/sarabun_v7_thai_latin_medium"
                        android:maxLength="10"
                        android:paddingBottom="2dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/edit_text"
                        android:textSize="14dp"
                        android:visibility="gone"

                        />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/sarabun_v7_thai_latin_medium"
                        android:maxLength="10"
                        android:paddingBottom="2dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/edit_text"
                        android:textSize="14dp"
                        android:visibility="gone"

                        />

                </LinearLayout>

                <View
                    android:id="@+id/viewLine1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical">

                    <Button
                        android:id="@+id/btnStartWatching"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/selector_my_account_button"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="@string/start_watching"
                        android:textAllCaps="false"
                        android:textColor="@drawable/text_color_selector" />

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/selector_my_account_button"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="@string/sign_out"
                        android:textAllCaps="false"
                        android:textColor="@drawable/text_color_selector" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</layout>