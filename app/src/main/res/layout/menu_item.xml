<?xml version="1.0" encoding="utf-8"?><!--  Single List Item Design -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="menuModel"
            type="panteao.make.ready.beanModel.model.MenuModel" />
    </data>

    <RelativeLayout
        android:id="@+id/menu_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/kids_mode"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:padding="2dp"
            android:src="@drawable/makereadytv_logo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/label_text"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sarabun_v7_thai_latin_regular"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:textSize="12sp"
            android:tint="@color/text_color_selector" />

        <View
            android:id="@+id/underline"
            android:layout_width="24dp"
            android:layout_height="2dp"
            android:layout_below="@id/label_text"
            android:layout_centerHorizontal="true"
            android:background="@color/moretitlecolor"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/label_text"
            android:ellipsize="marquee"
            android:fontFamily="@font/sarabun_v7_thai_latin_regular"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:singleLine="true"
            android:textColor="@color/text_color_selector"
            android:textSize="14sp" />
    </RelativeLayout>
</layout>