<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/control_layout"
    android:background="@color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/childControls"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:orientation="horizontal">



            <ImageView android:id="@+id/rew"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/backward_icon"
              />

            <ImageView android:id="@+id/pause"
                android:layout_height="43dp"
                android:layout_width="43dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:visibility="gone"
/>

            <ImageView android:id="@+id/forward"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/forward_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar_ll"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <include
                android:id="@+id/seekbarLayout"
                layout="@layout/player_seekbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

