<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/my_downloads_background">

        <RelativeLayout
            android:id="@+id/nodatafounmd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:gravity="center">
            <ImageView
                android:id="@+id/no_data"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/ic_no_data"
                android:contentDescription="TODO"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_data"
                android:text="@string/no_downloads"
                android:textColor="?attr/no_download_video_background_color"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:fontFamily="@font/sarabun_v7_thai_latin_regular"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>


</layout>