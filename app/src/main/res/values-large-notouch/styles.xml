<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyMaterialTheme" parent="@style/Theme.Leanback">
        <item name="browseRowsMarginTop">40dp</item>
        <item name="browseRowsMarginStart">70dp</item>
        <item name="browsePaddingTop">0dp</item>
        <item name="browsePaddingEnd">70dp</item>
        <item name="browsePaddingStart">70dp</item>
        <item name="rowHeaderStyle">@style/AppTheme.Leanback.Row</item>
        <item name="rowsVerticalGridStyle">@style/AppTheme.Leanback.VerticalGridView</item>
        <item name="itemsVerticalGridStyle">@style/AppTheme.Leanback.GridItems.VerticalGridView
        </item>
    </style>


    <style name="AppTheme.Leanback.Row" parent="Widget.Leanback.Row.Header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/lb_browse_header_text_size</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">900</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/sarabun_v7_thai_latin_medium</item>
    </style>

    <style name="AppTheme.Leanback.VerticalGridView" parent="Widget.Leanback.Rows.VerticalGridView">
        <item name="android:paddingBottom">10dp</item>
        <item name="focusOutFront">false</item>
        <item name="focusOutEnd">false</item>
        <item name="android:fontFamily">@font/sarabun_v7_thai_latin_medium</item>
    </style>

    <style name="AppTheme.Leanback.GridItems.VerticalGridView" parent="Widget.Leanback.GridItems.VerticalGridView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:gravity">left|start</item>
        <item name="android:horizontalSpacing">@dimen/lb_browse_item_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/lb_browse_item_vertical_spacing</item>
        <item name="focusOutFront">false</item>
    </style>

    <style name="CustomBrowseTheme" parent="@style/Theme.Leanback">
        <item name="browseRowsMarginTop">30dp</item>
        <item name="browseRowsMarginStart">20dp</item>
        <item name="browsePaddingTop">0dp</item>
        <item name="browsePaddingStart">20dp</item>

        <item name="rowHeaderStyle">@style/AppTheme.Leanback.Row</item>
    </style>
    <!--    <style name="ProfileRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">-->
    <!--        <item name="buttonTint">@drawable/my_compound_button_color_selector</item>-->
    <!--    </style>-->

    <style name="progressBarGreen" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="colorAccent">@color/moretitlecolor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/black_theme_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
    </style>

<!--    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">-->
<!--        <item name="android:textColor">@color/dialog_color_selector</item>-->
<!--    </style>-->

<!--    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">-->
<!--        <item name="android:textColor">@color/dialog_color_selector</item>-->
<!--    </style>-->

    <style name="Custom.Widget.CardView" parent="CardView">
        <item name="android:background">@color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="windowTitleStyle" parent="RtlOverlay.DialogWindowTitle.AppCompat"></style>
</resources>
